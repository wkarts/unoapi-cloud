{
  "exclude": ["./coverage", "./dist", "jest.config.js"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": false,
    "checkJs": false,
    "outDir": "dist",
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "esnext.array", "DOM", "ES2021.String"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true
    }
  }
}
